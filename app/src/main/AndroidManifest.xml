<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.citadel.rise">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="ru.citadel.rise.App"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/logo_square"
        android:roundIcon="@mipmap/logo_circle"
        android:supportsRtl="true">
        <activity
            android:name="ru.citadel.rise.login.LoginActivity"
            android:theme="@style/AppTheme.Login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ru.citadel.rise.main.MainActivity"
            android:theme="@style/AppTheme.Main"
            android:screenOrientation="portrait"/>
    </application>

</manifest>